<h1 class="text-center"><%= pluralize(@books.count, "Result"    ) %></h1>
<%= render "search/form" %>

<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
                <th><%= sort_link(@query, :description, "Description") %></th>
                <th><%= sort_link(@query, :author, "Author") %></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= link_to book.title, book %></td>
                    <td><%= link_to book.description.truncate(25), book %></td>
                    <td><%= link_to book.author, book %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>